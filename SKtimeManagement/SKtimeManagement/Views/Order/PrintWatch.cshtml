@model SKtimeManagement.ExportRecord
<div style="font-size: 9px; color: #bf3636">
    <div>
        <div>
            <table width="100%">
                <tr>
                    <td width="70%" colspan="2">
                        <div style="text-align: center">
                            <div class="inline">
                                <table>
