@model SKtimeManagement.EmployeeFilter
<div class="flexible">
    <div class="w25">
        <div id="filter" class="group">
            <h3 class="head-line">Tìm kiếm</h3>
            <div id="content">
                <form action="@Url.Action("FindSalary", "Salary")" method="post" for="salary-list" ptitle="Chấm công">
                    <div>
                        <label>Họ tên:</label><input class="input" type="text" name="Name" value="@Model.Name" />
                    </div>
                    <div>
                        <label>Số điện thoại:</label><input class="input" type="text" name="Phone" value="@Model.Phone" />
                    </div>
                    <div>
                        <label>Địa chỉ:</label><input class="input" type="text" name="Address" value="@Model.Address" />
                    </div>
                    <div>
                        <label>Cửa hàng:</label>
                        <div class="inline">
                            <div id="search-store" class="table-row">
                                <div><input type="text" placeholder="Tìm theo tên" /></div>
                                <div><span class="button small search"></span></div>
                            </div>
                            <span>
                                <select name="StoreID" data="@Url.Action("StoreList", "Setting")" value="@Model.StoreID">
                                    <option value="">None</option>
                                </select>
                            </span>
                        </div>
                    </div>
                    <div>
                        <label>Tháng:</label>
                        <div class='input-group date' format="@Constants.MonthString">
                            <input type='text' class="form-control input" name="From" value="@(Model.SalaryMonth.HasValue ? Model.SalaryMonth.Value.ToString(Constants.MonthString) : "")" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="text-right">
                        <a href="@Url.Action("Calculate", "Salary" )" target="_self" class="button view" for="main-content" ptitle="Chấm công">Chấm công</a>
                        <input type="submit" value="Tìm" url="@Url.Action("FindSalary", "Salary")" class="search" />
                    </div>
                </form>
            </div>
        </div>
        <div id="salary-list" class="group">
            
        </div>
    </div>
    <div class="w75">
        <h3 class="text-center">Lương</h3>
        <div id="salary-detail">

        </div>
    </div>
</div>