@model SKtimeManagement.TagInfo
<div id="warehouse-info">
    <h3 class="text-center">Nhóm sản phẩm</h3>
    <form action="@Url.Action("Save", "Tag")" method="POST" for="main-content" fail="pop-up-content" class="sm">
        <input type="hidden" name="ID" value="@Model.ID" />
        <div id="message" class="text-center @(Model.Result ? "text-info" : "text-danger")">
            @foreach (var msg in Model.Messages)
            {
                <i>@msg</i><br />
            }
        </div>
        <div class="flexible">
            <div class="w100">
                <div>
                    <label>Tên:</label><input class="input" type="text" name="Name" value="@Model.Name" valid="@(Model.Valid("Name") ? "true" : "false")" />
                </div>
                <div>
                    <label>Linh kiện:</label><input type="checkbox" name="ForRepairCheck" @(Model.ForRepair ? "checked" : "")/>
                </div>
            </div>
        </div>
        <div class="text-right">
            <label></label><input type="submit" value="Lưu" url="@Url.Action("List", "Tag")" class="save"/>
            <a href="@Url.Action("List", "Tag")" target="_self" for="main-content" ptitle="Nhóm sản phẩm" class="button cancel">Hủy</a>
        </div>
    </form>
</div>